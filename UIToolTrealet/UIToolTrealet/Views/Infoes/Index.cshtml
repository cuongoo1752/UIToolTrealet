@model IEnumerable<UIToolTrealet.Models.Info>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách thông tin thêm</h1>

<p class="my-3">
    <a asp-action="Create" asp-route-id="@ViewData["ItemId"]"><button type="button" class="btn btn-primary">Tạo thông tin mới</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="text-align: center">
                STT
            </th>
            <th style="text-align: center">
               TỪ KHÓA
            </th>
            <th>
                NỘI DUNG
            </th>
            <th style="text-align: center">
                THAO TÁC
            </th>
        </tr>
    </thead>
    <tbody>
        @{ int rowNo = 0; }
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @(rowNo += 1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Key)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            

            <td style="width: 14%">
                <a asp-action="Edit" asp-route-id="@item.InfoId">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.InfoId">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.InfoId">Xóa</a>
            </td>
        </tr>
        }
    </tbody>
</table>

