@model UIToolTrealet.Models.Info

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa thông tin</h1>

<h3>Bạn có chắc chắn muốn thông tin không?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            TỪ KHÓA
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Key)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Value)
        </dt>
        <dd class="col-sm-10">
            NỘI DUNG
        </dd>


    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="InfoId" />
        <input type="hidden" asp-for="ItemId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@Model.ItemId">Trở về</a>
    </form>
</div>
