@model IEnumerable<UIToolTrealet.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<style>
    .desc-item {
        display: inline-block;
        max-height: 150px;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>


<h1>Danh sách đồ vật</h1>

<p class="my-3">
    <a asp-action="Create" asp-route-id=@ViewData["PageId"]><button type="button" class="btn btn-primary">Tạo đồ vật</button></a>
    <a asp-action="Download" asp-route-id=@ViewData["PageId"] asp-route-isPage="true">Tải về file của Page</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th style="width: 15%;">
                TIÊU ĐỀ
            </th>
            <th style="text-align: center">
                ẢNH ĐẠI DIỆN
                
            </th>
            <th class="w-50">
                MÔ TẢ
            </th>

            <th>
                THAO TÁC
            </th>
        </tr>
    </thead>
    <tbody>

        @{ int rowNo = 0; }

        @foreach (var item in Model)
        {
        <tr>
            <td style="text-align: center">
                @(rowNo += 1)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <img src="@item.TitleImage"
                     class="rounded mx-auto d-block" alt="Không có ảnh đại diện!" style="max-height: 140px;">
            </td>
            <td>
                <div class="desc-item">
                    @Html.DisplayFor(modelItem => item.Desc)
                </div>

            </td>

            <td style="width: 11%; text-align: center" >
                <a asp-action="Edit" asp-route-id="@item.ItemId">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.ItemId">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.ItemId">Xóa</a>
            </td>
        </tr>
        }


    </tbody>
</table>
<div>
    <a asp-area="" asp-controller="Pages" asp-action="Index">Trở về</a>
</div>
