@model UIToolTrealet.Models.Item

@{
    ViewData["Title"] = "Details";
}




<h1>Details</h1>

<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 mb-2">
            TIÊU ĐỀ
        </dt>
        <dd class="col-sm-10 mb-2">
            <h2>@Html.DisplayFor(model => model.Title)</h2>
        </dd>
        <dt class="col-sm-2">
            MÔ TẢ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Desc)
        </dd>
        <dt class="col-sm-2">
            MÃ CODE AVA
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageCodeAvatar)
        </dd>
        <dt class="col-sm-2">
            ẢNH AVA MINH HỌA
        </dt>
        <dd class="col-sm-10">
            <img src="https://hcloud.trealet.com/cache/Nhom01/app/translate.png"
                 class="rounded d-block" alt="Không có ảnh đại diện" style="max-height: 140px;">
        </dd>
        <dt class="col-sm-2">
            DANH SÁCH ẢNH
        </dt>
        <dd class="col-sm-10">
            <a class="nav-link text-dark" asp-area=""  asp-controller="Images" asp-action="Index" asp-route-id="@Model.ItemId">
                <button type="button" class="btn btn-secondary">Xem danh sách ảnh</button>
            </a>

        </dd>
        <dt class="col-sm-2">
            DANH SÁCH VIDEO
        </dt>
        <dd class="col-sm-10">
            <a class="nav-link text-dark" asp-area="" asp-controller="Videos" asp-action="Index" asp-route-id="@Model.ItemId">
                <button type="button" class="btn btn-secondary">Xem danh sách video</button>
            </a>
        </dd>
        <dt class="col-sm-2">
            DANH SÁCH CÂU HỎI
        </dt>
        <dd class="col-sm-10">
            <a class="nav-link text-dark" asp-area="" asp-controller="Interactions" asp-action="Index" asp-route-id="@Model.ItemId">
                <button type="button" class="btn btn-secondary">Xem danh sách câu hỏi</button>
            </a>
        </dd>
    </dl>
</div>
<div class="my-5"></div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ItemId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
