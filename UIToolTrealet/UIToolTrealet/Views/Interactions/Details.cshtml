@model UIToolTrealet.Models.Interaction

@{
    ViewData["Title"] = "Details";
}

<h1>Chi tiết câu hỏi</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            CÂU HỎI
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Question)
        </dd>
        <dt class = "col-sm-2">
            TRẢ LỜI A
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnswerA)
        </dd>
        <dt class = "col-sm-2">
            TRẢ LỜI B
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnswerB)
        </dd>
        <dt class = "col-sm-2">
            TRẢ LỜI C
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnswerC)
        </dd>
        <dt class = "col-sm-2">
            TRẢ LỜI D
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnswerD)
        </dd>
        <dt class = "col-sm-2">
            ĐÁP ÁN ĐÚNG
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrueAnswer)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.InteractionId">Sửa</a> |
    <a asp-action="Index" asp-route-id="@Model.ItemId">Trở về</a>
</div>
