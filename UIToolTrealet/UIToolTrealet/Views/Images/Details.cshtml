@model UIToolTrealet.Models.Image

@{
    ViewData["Title"] = "Details";
}

<h1>Chi tiết ảnh</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ĐỊA CHỈ ẢNH
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>
        <dt class="col-sm-2">
            ẢNH
        </dt>
        <dd class="col-sm-10">
            <img id="image" src="@Model.Url"
                 class="rounded d-block" alt="Không có ảnh đại diện!" style="max-height: 140px;">
        </dd>


    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ImageId">Sửa</a> |
    <a asp-action="Index" asp-route-id="@Model.ItemId">Trở về</a>
</div>
