@model UIToolTrealet.Models.Image

@{
    ViewData["Title"] = "Edit";
}

<h1>Sửa ảnh</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ImageId" />
            <div class="form-group">
                <label class="control-label">Địa chỉ ảnh</label>
                <input id="url" asp-for="ImageCodeTrealet" class="form-control" />
                <span asp-validation-for="ImageCodeTrealet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ảnh từ địa chỉ</label>
                <img id="image" src="@Model.ImageCodeTrealet"
                     class="rounded d-block" alt="Không có ảnh đại diện!" style="max-height: 140px;">
            </div>

            <input type="hidden" asp-for="ItemId" class="form-control" />

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.ItemId">Trở về</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    var lastValue = "";
    document.getElementById("url").onkeyup = function () {
        let inputValue = document.getElementById("url").value;
        if (lastValue != inputValue) {
            document.getElementById("image").setAttribute("src", inputValue);

            lastValue = inputValue;
        }
    }

</script>